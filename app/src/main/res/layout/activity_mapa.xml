<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/caf"
    tools:context=".ActivityMapa">

    <!-- MAPA -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

    </org.osmdroid.views.MapView>

    <!-- Card superior -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="403dp"
            android:layout_height="52dp"
            android:background="@mipmap/caf"
            android:padding="12dp"
            android:text="AnserView"
            android:textAlignment="center"
            android:textColor="#134915"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Card de distancia -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_distancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/container_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_distancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Su distancia al punto seleccionado es:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favoritos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AÃ±adir lugar"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            app:backgroundTint="#2C9030" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mispuntos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Mis lugares"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            app:backgroundTint="#2C9030" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
