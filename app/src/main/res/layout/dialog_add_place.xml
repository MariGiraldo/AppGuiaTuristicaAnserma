<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="377dp"
        android:layout_height="58dp"
        android:fontFamily="serif"
        android:hint="Nombre"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:fontFamily="serif"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:textColorLink="#4CAF50"
        android:textStyle="italic" />

    <!-- Contenedor para la cuadrícula de radio botones -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo de lugar"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/radio_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <!-- Fila superior de radio botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/radio_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_food"
                android:drawablePadding="8dp"
                android:text="Comida"
                android:textSize="12sp"
                tools:text="Comida" />

            <RadioButton
                android:id="@+id/radio_hotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_hotel"
                android:drawablePadding="8dp"
                android:text="Hotel"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Fila inferior de radio botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_recreation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_recreation"
                android:drawablePadding="8dp"
                android:text="Recreación"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_marker_default"
                android:drawablePadding="8dp"
                android:text="Otro"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="serif"
        android:text="Tomar foto"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</LinearLayout>