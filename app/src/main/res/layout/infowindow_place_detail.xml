<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_infowindow_green_tint"
    android:padding="12dp"
    android:elevation="6dp"
    android:id="@+id/info_window_container">

    <TextView
        android:id="@+id/iw_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:singleLine="true"
        android:text="Título"
        android:textColor="#09260B"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/iw_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/iw_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:maxLines="5"
        android:text="Descripción"
        android:textColor="#444"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_distancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Distancia"
        android:textStyle="italic" />
</LinearLayout>
